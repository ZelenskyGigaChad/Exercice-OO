#Renaud Deschenes 401
#Exercice 2
class Rectangle:
    def __init__(self, longueur, largeur):
        self.longueur = longueur
        self.largeur = largeur
    def aire(self):
        return self.longueur * self.largeur
    def afficher(self):
        print("Longueur:", self.longueur, "Largeur:", self.largeur)
        print("Aire:", self.aire())
